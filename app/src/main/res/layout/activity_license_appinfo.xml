<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp">

            <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:contentInsetEnd="0dp"
                app:contentInsetStart="0dp" >
                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    >

                    <Button
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:layout_centerInParent="true"
                        android:textColor="#ffffff"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/ic_back"
                        android:id="@+id/btn_back"
                        android:layout_marginLeft="10dp"
                        android:padding="30dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true" android:text="앱 정보"
                        android:textColor="#ffffff"
                        android:textSize="20sp"/>


                </RelativeLayout>
            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView

            android:layout_marginTop="50dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/app_logo_license"/>

        <TextView
            android:layout_marginTop="40dp"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Life is the same as a choice\nbetween birth and death"
            android:gravity="center"
            android:typeface="serif"
            android:textStyle="bold|italic" />
        <TextView
            android:textColor="#fff"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Jean Paul Sarte -"
            android:typeface="serif"
            android:textStyle="italic" />
        <TextView
            android:layout_marginTop="40dp"

            android:textColor="#fff"
            android:id="@+id/textview_appinfo_presentVS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="현재 버전 : 0.1"/>
        <TextView

            android:textColor="#fff"
            android:id="@+id/textview_appinfo_lastVS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최신 버전 : 0.1"/>
        <TextView

            android:textColor="#fff"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최신버전입니다."/>

        <TextView

            android:textColor="#fff"
            android:layout_marginTop="110dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copyright ⓒ Tooki, Inc. All rights Reserved"/>

    </LinearLayout>

</RelativeLayout>
