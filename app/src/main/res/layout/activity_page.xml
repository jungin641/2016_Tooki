<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:orientation="vertical"
        android:layout_marginTop="50.5dp"
        android:id="@+id/content_page"
        android:background="@drawable/white_box">
        <TextView
            android:layout_width="fill_parent"
            android:id="@+id/questionCard"
            android:textAlignment="center"
            android:layout_height="65dp"
            android:layout_marginTop="30dp"
            android:textColor="#ffffff"
            android:layout_marginLeft="12.5dp"
            android:layout_marginRight="12.5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:gravity="center_horizontal" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="34dp"
            android:gravity="center"
            tools:ignore="RtlCompat">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:id="@+id/image_of_yes"
                android:layout_marginRight="12dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_yes2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/NumOfYes"
                android:layout_marginRight="55.5dp"
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:layout_gravity="center_vertical"/>
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginRight="12dp"
                android:id="@+id/image_of_no"
                android:layout_gravity="center"
                android:src="@drawable/ic_no2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:id="@+id/NumOfNo"
                android:layout_marginRight="55.5dp"
                android:textAlignment="center"
                android:layout_gravity="center_vertical"/>
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginRight="12dp"
                android:id="@+id/image_of_chat"
                android:src="@drawable/ic_comment_small_op"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:alpha="0.6"
                android:textAlignment="center"
                android:id="@+id/NumOfComment"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>
    </LinearLayout>
    <ListView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/listView_comment"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/content_page"
        android:layout_marginBottom="50dp"
        android:background="@drawable/white_box"
        android:transcriptMode="alwaysScroll"
        android:windowSoftInputMode="adjustResize"
        />
    <include layout="@layout/include_detail_pager"/>
</RelativeLayout>