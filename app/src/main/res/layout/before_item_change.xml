<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tendom.tooki.mainpage.FixedSwipeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/container">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:orientation="vertical"
            android:id="@+id/container_y"
            android:background="@drawable/yes_select"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="12.5dp"
                android:layout_marginRight="12.5dp">
                >
                <TextView
                    android:id="@+id/questionCard_y"
                    android:layout_width="340dp"
                    android:textAlignment="center"
                    android:layout_height="65dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center_horizontal"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_gravity="center_horizontal" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="34dp"
                    android:gravity="center"
                    tools:ignore="RtlCompat"
                    android:id="@+id/linearLayout_y">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:id="@+id/image_of_yes_y"
                        android:layout_marginRight="12dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_yes2"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/NumOfYes_y"
                        android:layout_marginRight="55.5dp"
                        android:textColor="#ffffff"
                        android:textAlignment="center"
                        android:layout_gravity="center_vertical"/>
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginRight="12dp"
                        android:id="@+id/image_of_no_y"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_no2"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:id="@+id/NumOfNo_y"
                        android:layout_marginRight="55.5dp"
                        android:textAlignment="center"
                        android:layout_gravity="center_vertical"/>
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginRight="12dp"
                        android:id="@+id/image_of_chat_y"
                        android:src="@drawable/ic_comment_small_op"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:alpha="0.6"
                        android:textAlignment="center"
                        android:id="@+id/NumOfComment_y"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:orientation="vertical"
            android:id="@+id/container_n"
            android:background="@drawable/no_select"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="12.5dp"
                android:layout_marginRight="12.5dp">

                <TextView
                    android:id="@+id/questionCard_n"
                    android:layout_width="340dp"
                    android:textAlignment="center"
                    android:layout_height="65dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center_horizontal"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_gravity="center_horizontal"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="34dp"
                    android:gravity="center"
                    tools:ignore="RtlCompat"
                    android:id="@+id/linearLayout_n">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:id="@+id/image_of_yes_n"
                        android:layout_marginRight="12dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_yes2"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/NumOfYes_n"
                        android:layout_marginRight="55.5dp"
                        android:textColor="#ffffff"
                        android:textAlignment="center"
                        android:layout_gravity="center_vertical"
                        android:allowUndo="false"/>
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginRight="12dp"
                        android:id="@+id/image_of_no_n"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_no2"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:id="@+id/NumOfNo_n"
                        android:layout_marginRight="55.5dp"
                        android:layout_gravity="center_vertical"
                        android:textAlignment="center"/>
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginRight="12dp"
                        android:id="@+id/image_of_chat_n"
                        android:src="@drawable/ic_comment_small_op"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:alpha="0.6"
                        android:layout_gravity="center_vertical"
                        android:textAlignment="center"
                        android:id="@+id/NumOfComment_n"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/container_b"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:id="@+id/questionCard"
                android:layout_alignParentTop="true"
                android:layout_marginTop="6.5dp"
                android:layout_marginLeft="12.5dp"
                android:layout_marginRight="12.5dp"
                android:layout_centerHorizontal="true"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:textColor="#ffffff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_below="@+id/questionCard"
                android:gravity="center"
                android:alpha="0.30"
                android:id="@+id/linearLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:id="@+id/textView_date"/>

            </LinearLayout>

        </LinearLayout>

    </com.tendom.tooki.mainpage.FixedSwipeLayout>

</LinearLayout>
