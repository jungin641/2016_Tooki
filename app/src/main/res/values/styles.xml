<resources>

    <style name="AppTheme" parent="Base.AppTheme">
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>


    <color name="background_color">@android:color/transparent</color>
    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorButtonNormal">@android:color/transparent</item>
        <item name="colorAccent">#ffffff</item>
        <item name="android:windowBackground">@drawable/app_background</item>
    </style>
    <style name="PreferencesTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textColorHint">#ffffff</item>
        <item name="android:cacheColorHint">#ffffff</item>
        <item name="android:listViewStyle">@style/listViewPrefs</item>
    </style>

    <style name="listViewPrefs" parent="@android:style/Widget.ListView">

        <item name="android:cacheColorHint">#FFFFFF</item>
    </style>

</resources>
